<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= movement.name %> - Echo Lab</title>
</head>
<body>
  <h1><%= movement.name %></h1>
  <p><%= movement.description || 'No description provided.' %></p>

  <h2>Figures</h2>
  <ul>
    <% figures.forEach(f => { %>
      <li><a href="/figures/<%= f.id %>"><%= f.name %></a></li>
    <% }) %>
  </ul>

  <h2>Concepts</h2>
  <ul>
    <% concepts.forEach(c => { %>
      <li><a href="/concepts/<%= c.id %>"><%= c.term %></a></li>
    <% }) %>
  </ul>

  <h2>Titles</h2>
  <ul>
    <% titles.forEach(t => { %>
      <li><a href="/titles/<%= t.id %>"><%= t.title %></a></li>
    <% }) %>
  </ul>

  <p><a href="/">Back to homepage</a></p>
</body>
</html>
